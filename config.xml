<?xml version='1.0' encoding='utf-8'?>
<widget id="at.vsstoe-wien.istudi" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap = "http://phonegap.com/ns/1.0">
    <name>iStudi</name>
    <description>Alle Infos rund ums Studium.</description>
    <author email="office@vsstoe-wien.at" href="http://vsstoe-wien.at">Verband Sozialistischer Student_innen Wien</author>

    <icon src="res/icon/icon_ios.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/icon/icon_ios.png" gap:platform="ios" width="72" height="72" />
    <icon src="res/icon/icon_ios.png" gap:platform="ios" width="114" height="114" />
    <icon src="res/icon/icon_ios.png" gap:platform="ios" width="144" height="144" />

    <icon src="res/icon/icon_android.png" gap:platform="android" gap:density="ldpi" />
    <icon src="res/icon/icon_android.png" gap:platform="android" gap:density="mdpi" />
    <icon src="res/icon/icon_android.png" gap:platform="android" gap:density="hdpi" />
    <icon src="res/icon/icon_android.png" gap:platform="android" gap:density="xhdpi" />

    <icon src="res/icon/icon_android.png" gap:platform="webos" />
    <icon src="res/icon/icon_android.png" gap:platform="webos" gap:role="mini" />


    <gap:splash src="splash.png" />

    <gap:splash src="splash.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="splash.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="splash.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="splash.png" gap:platform="ios" width="1024" height="748" />
    <gap:splash src="splash.png" gap:platform="ios" width="768" height="1004" />
    <gap:splash src="splash.png" gap:platform="ios" width="2048" height="1496" />
    <gap:splash src="splash.png" gap:platform="ios" width="1536" height="2008" />

    <gap:splash src="splash.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="splash.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="splash.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="splash.png" gap:platform="android" gap:density="xhdpi" />

    <feature name="http://api.phonegap.com/1.0/device" />
    <preference name="phonegap-version" value="2.9.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <access origin="*" />

    <gap:plugin name="com.adobe.plugins.pushplugin" />
</widget>

<?xml version='1.0' encoding='utf-8'?>
<widget id="at.vsstoe-wien.istudi" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap = "http://phonegap.com/ns/1.0">
    <name>iStudi</name>
    <description>Alle Infos rund ums Studium.</description>
    <author email="office@vsstoe-wien.at" href="http://vsstoe-wien.at">Verband Sozialistischer Student_innen Wien</author>

    <gap:platform name="ios" />
    <gap:platform name="android" />

    <icon src="res/icon/icon_57.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/icon/icon_72.png" gap:platform="ios" width="72" height="72" />
    <icon src="res/icon/icon_114.png" gap:platform="ios" width="114" height="114" />
    <icon src="res/icon/icon_144.png" gap:platform="ios" width="144" height="144" />
    <icon src="res/icon/icon_320.png" gap:platform="ios" width="320" height="320" />
    <icon src="res/icon/icon_512.png" gap:platform="ios" width="512" height="512" />

    <icon src="res/icon/icon_ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="res/icon/icon_mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="res/icon/icon_hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="res/icon/icon_xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="res/icon/icon_xxhdpi.png" gap:platform="android" gap:density="xxhdpi" />

    <icon src="res/icon/icon_hdpi.png" gap:platform="webos" />
    <icon src="res/icon/icon_hdpi.png" gap:platform="webos" gap:role="mini" />


    <gap:splash src="splash.png" />

    <gap:splash src="res/screen/splash_320_480.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/screen/splash_640_960.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="res/screen/splash_640_1136.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="res/screen/splash_768_1004.png" gap:platform="ios" width="768" height="1004" />
    <gap:splash src="res/screen/splash_1536_2008.png" gap:platform="ios" width="1536" height="2008" />

    <gap:splash src="res/screen/splash_320_480.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/splash_768_1004.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/splash_1536_2008.png" gap:platform="android" gap:density="xhdpi" />

    <access origin="*" />

    <feature name="http://api.phonegap.com/1.0/device" />
    <preference name="phonegap-version" value="2.9.0" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="BackupWebStorage" value="local" />

    <gap:plugin name="com.phonegap.plugins.pushplugin" />

</widget>
